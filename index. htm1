- рЃерЃћрЃўрЃюрЃљрЃарЃЕрЃБрЃюрЃћ рЃљрЃарЃЕрЃћрЃБрЃџрЃў рЃАрЃбрЃўрЃџрЃў рЃЊрЃљ рЃњрЃљрЃюрЃгрЃДрЃЮрЃЉрЃљ
- рЃЦрЃљрЃарЃЌрЃБрЃџрЃў рЃћрЃюрЃўрЃА рЃЉрЃБрЃюрЃћрЃЉрЃарЃўрЃЮрЃЉрЃљ рЃЊрЃљ рЃЮрЃарЃњрЃљрЃюрЃБрЃџрЃЮрЃЉрЃљ (рЃљрЃарЃљ рЃ«рЃћрЃџрЃЮрЃЋрЃюрЃБрЃарЃў рЃарЃўрЃЌрЃЏрЃў!)
- рЃЌрЃБ рЃАрЃбрЃўрЃџрЃў рЃЋрЃћрЃарЃџрЃўрЃЉрЃарЃўрЃљ - рЃљрЃЉрЃАрЃЮрЃџрЃБрЃбрЃБрЃарЃљрЃЊ рЃЌрЃљрЃЋрЃўрЃАрЃБрЃцрЃљрЃџрЃў рЃцрЃЮрЃарЃЏрЃљ, рЃЌрЃўрЃЌрЃЮрЃћрЃБрЃџрЃў рЃ«рЃљрЃќрЃў рЃЊрЃљрЃЏрЃЮрЃБрЃЎрЃўрЃЊрЃћрЃЉрЃћрЃџрЃў рЃ«рЃљрЃбрЃўрЃљ
- рЃерЃћрЃћрЃАрЃљрЃЉрЃљрЃЏрЃћрЃЉрЃЮрЃЊрЃћрЃА рЃЏрЃЮрЃЌрЃ«рЃЮрЃЋрЃюрЃўрЃџ рЃАрЃўрЃњрЃарЃФрЃћрЃА
- рЃ«рЃљрЃбрЃЮрЃЋрЃљрЃюрЃў, рЃърЃЮрЃћрЃбрЃБрЃарЃў рЃћрЃюрЃљ, рЃЏрЃљрЃњрЃарЃљрЃЏ рЃЉрЃБрЃюрЃћрЃЉрЃарЃўрЃЋрЃў рЃЊрЃљ рЃљрЃарЃљрЃФрЃљрЃџрЃљрЃЊрЃЮрЃЉрЃарЃўрЃЋрЃў

рЃЊрЃљрЃљрЃЉрЃарЃБрЃюрЃћ рЃЏрЃ«рЃЮрЃџрЃЮрЃЊ рЃџрЃћрЃЦрЃАрЃўрЃА рЃбрЃћрЃЦрЃАрЃбрЃў, рЃљрЃарЃљрЃюрЃљрЃўрЃарЃў рЃЎрЃЮрЃЏрЃћрЃюрЃбрЃљрЃарЃў, рЃљрЃ«рЃАрЃюрЃљ рЃЌрЃБ рЃЊрЃљрЃАрЃљрЃ«рЃћрЃџрЃћрЃЉрЃљ.`;

                    const response = await fetch('https://api.anthropic.com/v1/messages', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            model: 'claude-sonnet-4-20250514',
                            max_tokens: 1000,
                            messages: [
                                { role: 'user', content: prompt }
                            ],
                        })
                    });

                    const data = await response.json();
                    
                    if (data.content && data.content[0]) {
                        const generatedPoem = data.content[0].text;
                        setPoem(generatedPoem);
                    } else {
                        setPoem('рЃЊрЃљрЃцрЃўрЃЦрЃАрЃўрЃарЃЊрЃљ рЃерЃћрЃфрЃЊрЃЮрЃЏрЃљ рЃњрЃћрЃюрЃћрЃарЃљрЃфрЃўрЃўрЃАрЃљрЃА. рЃАрЃфрЃљрЃЊрЃћрЃЌ рЃЌрЃљрЃЋрЃўрЃЊрЃљрЃю.');
                    }
                } catch (error) {
                    console.error('рЃерЃћрЃфрЃЊрЃЮрЃЏрЃљ:', error);
                    setPoem('рЃЊрЃљрЃцрЃўрЃЦрЃАрЃўрЃарЃЊрЃљ рЃбрЃћрЃЦрЃюрЃўрЃЎрЃБрЃарЃў рЃерЃћрЃфрЃЊрЃЮрЃЏрЃљ. рЃњрЃЌрЃ«рЃЮрЃЋрЃЌ, рЃАрЃфрЃљрЃЊрЃЮрЃЌ рЃЌрЃљрЃЋрЃўрЃЊрЃљрЃю.');
                } finally {
                    setLoading(false);
                }
            };

            const savePoem = () => {
                if (poem) {
                    const newSaved = [...saved, {
                        id: Date.now(),
                        theme,
                        style,
                        mood,
                        metaphors: useMetaphors,
                        customMetaphors: customMetaphors || null,
                        text: poem,
                        date: new Date().toLocaleString('ka-GE')
                    }];
                    setSaved(newSaved);
                    alert('рЃџрЃћрЃЦрЃАрЃў рЃерЃћрЃюрЃљрЃ«рЃБрЃџрЃўрЃљ! рЃюрЃљрЃ«рЃћрЃЌ рЃЦрЃЋрЃћрЃЏрЃЮрЃЌ рЃерЃћрЃюрЃљрЃ«рЃБрЃџрЃў рЃџрЃћрЃЦрЃАрЃћрЃЉрЃўрЃА рЃАрЃћрЃЦрЃфрЃўрЃљрЃерЃў.');
                }
            };

            const copyToClipboard = () => {
                if (poem) {
                    navigator.clipboard.writeText(poem);
                    setCopied(true);
                    setTimeout(() => setCopied(false), 2000);
                }
            };

            const deleteSaved = (id) => {
                setSaved(saved.filter(item => item.id !== id));
            };

            return (
                <div className="min-h-screen bg-gradient-to-br from-purple-50 via-pink-50 to-blue-50 p-6">
                    <div className="max-w-5xl mx-auto">
                        {/* Header */}
                        <div className="text-center mb-8">
                            <div className="flex items-center justify-center gap-3 mb-3">
                                <div className="w-10 h-10 text-purple-600">
                                    <Sparkles />
                                </div>
                                <h1 className="text-4xl font-bold text-gray-800">рЃърЃЮрЃћрЃќрЃўрЃўрЃА рЃњрЃћрЃюрЃћрЃарЃљрЃбрЃЮрЃарЃў</h1>
                            </div>
                            <p className="text-gray-600">рЃерЃћрЃЦрЃЏрЃћрЃюрЃўрЃЌ рЃБрЃюрЃўрЃЎрЃљрЃџрЃБрЃарЃў рЃџрЃћрЃЦрЃАрЃћрЃЉрЃў рЃ«рЃћрЃџрЃЮрЃЋрЃюрЃБрЃарЃў рЃўрЃюрЃбрЃћрЃџрЃћрЃЦрЃбрЃўрЃА рЃЊрЃљрЃ«рЃЏрЃљрЃарЃћрЃЉрЃўрЃЌ</p>
                        </div>

                        {/* Main Generator */}
                        <div className="bg-white rounded-2xl shadow-xl p-8 mb-8">
                            <div className="grid md:grid-cols-2 gap-6 mb-6">
                                {/* Theme Input */}
                                <div className="md:col-span-2">
                                    <label className="block text-sm font-semibold text-gray-700 mb-2">
                                        рЃЌрЃћрЃЏрЃљ / рЃАрЃљрЃЎрЃЋрЃљрЃюрЃФрЃЮ рЃАрЃўрЃбрЃДрЃЋрЃћрЃЉрЃў *
                                    </label>
                                    <input
                                        type="text"
                                        value={theme}
                                        onChange={(e) => setTheme(e.target.value)}
                                        placeholder="рЃЏрЃљрЃњ: рЃАрЃўрЃДрЃЋрЃљрЃарЃБрЃџрЃў, рЃЉрЃБрЃюрЃћрЃЉрЃљ, рЃЌрЃљрЃЋрЃўрЃАрЃБрЃцрЃџрЃћрЃЉрЃљ, рЃфрЃюрЃЮрЃЉрЃўрЃћрЃарЃћрЃЉрЃљ..."
                                        className="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-purple-500 focus:outline-none transition"
                                    />
                                </div>

                                {/* Style */}
                                <div>
                                    <label className="block text-sm font-semibold text-gray-700 mb-2">
                                        рЃАрЃбрЃўрЃџрЃў
                                    </label>
                                    <select
                                        value={style}
                                        onChange={(e) => setStyle(e.target.value)}
                                        className="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-purple-500 focus:outline-none transition"
                                    >
                                        {styles.map(s => (
                                            <option key={s} value={s}>{s}</option>
                                        ))}
                                    </select>
                                </div>

                                {/* Mood */}
                                <div>
                                    <label className="block text-sm font-semibold text-gray-700 mb-2">
                                        рЃњрЃљрЃюрЃгрЃДрЃЮрЃЉрЃљ
                                    </label>
                                    <select
                                        value={mood}
                                        onChange={(e) => setMood(e.target.value)}
                                        className="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-purple-500 focus:outline-none transition"
                                    >
                                        {moods.map(m => (
                                            <option key={m} value={m}>{m}</option>
                                        ))}
                                    </select>
                                </div>

                                {/* Length */}
                                <div className="md:col-span-2">
                                    <label className="block text-sm font-semibold text-gray-700 mb-2">
                                        рЃАрЃўрЃњрЃарЃФрЃћ
                                    </label>
                                    <div className="flex gap-3">
                                        {lengths.map(l => (
                                            <button
                                                key={l}
                                                onClick={() => setLength(l)}
                                                className={`flex-1 py-3 rounded-lg font-medium transition ${
                                                    length === l
                                                        ? 'bg-purple-600 text-white'
                                                        : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                                                }`}
                                            >
                                                {l}
                                            </button>
                                        ))}
                                    </div>
                                </div>

                                {/* Metaphors Toggle */}
                                <div className="md:col-span-2">
                                    <label className="flex items-center gap-3 p-4 bg-purple-50 rounded-lg border-2 border-purple-200 cursor-pointer hover:bg-purple-100 transition">
                                        <input
                                            type="checkbox"
                                            checked={useMetaphors}
                                            onChange={(e) => setUseMetaphors(e.target.checked)}
                                            className="w-5 h-5 text-purple-600 rounded focus:ring-purple-500"
                                        />
                                        <div className="flex-1">
                                            <span className="font-semibold text-gray-800">рЃЏрЃћрЃбрЃљрЃцрЃЮрЃарЃћрЃЉрЃўрЃА рЃњрЃљрЃЏрЃЮрЃДрЃћрЃюрЃћрЃЉрЃљ</span>
                                            <p className="text-sm text-gray-600 mt-1">
                                                {useMetaphors 
                                                    ? 'рЃџрЃћрЃЦрЃАрЃў рЃерЃћрЃўрЃфрЃљрЃЋрЃА рЃЏрЃћрЃбрЃљрЃцрЃЮрЃарЃћрЃЉрЃА рЃЊрЃљ рЃ«рЃљрЃбрЃЮрЃЋрЃљрЃю рЃћрЃюрЃљрЃА' 
                                                    : 'рЃџрЃћрЃЦрЃАрЃў рЃўрЃЦрЃюрЃћрЃЉрЃљ рЃБрЃцрЃарЃЮ рЃърЃўрЃарЃЊрЃљрЃърЃўрЃарЃў рЃЊрЃљ рЃЏрЃљрЃарЃбрЃўрЃЋрЃў рЃћрЃюрЃўрЃЌ'}
                                            </p>
                                        </div>
                                    </label>
                                </div>

                                {/* Custom Metaphors */}
                                {useMetaphors && (
                                    <div className="md:col-span-2">
                                        <label className="block text-sm font-semibold text-gray-700 mb-2">
                                            рЃЌрЃЦрЃЋрЃћрЃюрЃў рЃЏрЃћрЃбрЃљрЃцрЃЮрЃарЃљ (рЃљрЃарЃљрЃАрЃљрЃЋрЃљрЃџрЃЊрЃћрЃЉрЃБрЃџрЃЮ)
                                        </label>
                                        <textarea
                                            value={customMetaphors}
                                            onChange={(e) => setCustomMetaphors(e.target.value)}
                                            placeholder="рЃЏрЃљрЃњ: рЃЊрЃарЃЮ рЃарЃЮрЃњрЃЮрЃарЃф рЃЏрЃЊрЃўрЃюрЃљрЃарЃћ, рЃАрЃўрЃДрЃЋрЃљрЃарЃБрЃџрЃў рЃарЃЮрЃњрЃЮрЃарЃф рЃфрЃћрЃфрЃ«рЃџрЃў, рЃЏрЃљрЃарЃбрЃЮрЃЮрЃЉрЃљ рЃарЃЮрЃњрЃЮрЃарЃф рЃЎрЃБрЃюрЃФрЃБрЃџрЃў..."
                                            rows="3"
                                            className="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-purple-500 focus:outline-none transition resize-none"
                                        />
                                        <p className="text-xs text-gray-500 mt-2">
                                            ­ЪњА рЃерЃћрЃњрЃўрЃФрЃџрЃўрЃљ рЃЕрЃљрЃЏрЃЮрЃЌрЃЋрЃљрЃџрЃЮ рЃарЃљрЃЏрЃЊрЃћрЃюрЃўрЃЏрЃћ рЃЏрЃћрЃбрЃљрЃцрЃЮрЃарЃљ, рЃарЃЮрЃЏрЃћрЃџрЃЌрЃљ рЃњрЃљрЃЏрЃЮрЃДрЃћрЃюрЃћрЃЉрЃљрЃф рЃњрЃўрЃюрЃЊрЃљ рЃџрЃћрЃЦрЃАрЃерЃў
                                        </p>
                                    </div>
                                )}
                            </div>

                            {/* Generate Button */}
                            <button
                                onClick={generatePoem}
                                disabled={loading}
                                className="w-full bg-gradient-to-r from-purple-600 to-pink-600 text-white py-4 rounded-lg font-bold text-lg hover:from-purple-700 hover:to-pink-700 disabled:opacity-50 disabled:cursor-not-allowed transition flex items-center justify-center gap-2"
                            >
                                {loading ? (
                                    <>
                                        <RefreshCw className="w-5 h-5 animate-spin" />
                                        рЃњрЃћрЃюрЃћрЃарЃљрЃфрЃўрЃљ рЃЏрЃўрЃЏрЃЊрЃўрЃюрЃљрЃарЃћрЃЮрЃЉрЃА...
                                    </>
                                ) : (
                                    <>
                                        <div className="w-5 h-5">
                                            <Sparkles />
                                        </div>
                                        рЃерЃћрЃЦрЃЏрЃћрЃюрЃў рЃџрЃћрЃЦрЃАрЃў
                                    </>
                                )}
                            </button>

                            {/* Generated Poem */}
                            {poem && (
                                <div className="mt-6 p-6 bg-gradient-to-br from-purple-50 to-pink-50 rounded-lg border-2 border-purple-200">
                                    <div className="flex justify-between items-start mb-4">
                                        <h3 className="text-xl font-bold text-gray-800">рЃњрЃћрЃюрЃћрЃарЃўрЃарЃћрЃЉрЃБрЃџрЃў рЃџрЃћрЃЦрЃАрЃў:</h3>
                                        <div className="flex gap-2">
                                            <button
                                                onClick={copyToClipboard}
                                                className="p-2 bg-white rounded-lg hover:bg-gray-100 transition"
                                                title="рЃЎрЃЮрЃърЃўрЃарЃћрЃЉрЃљ"
                                            >
                                                {copied ? <Check className="w-5 h-5 text-green-600" /> : <Copy className="w-5 h-5 text-gray-600" />}
                                            </button>
                                            <button
                                                onClick={savePoem}
                                                className="p-2 bg-white rounded-lg hover:bg-gray-100 transition"
                                                title="рЃерЃћрЃюрЃљрЃ«рЃЋрЃљ"
                                            >
                                                <Save className="w-5 h-5 text-gray-600" />
                                            </button>
                                        </div>
                                    </div>
                                    <div className="text-gray-800 leading-relaxed whitespace-pre-wrap font-serif text-lg">
                                        {poem}
                                    </div>
                                    <div className="mt-4 pt-4 border-t border-purple-200 text-sm text-gray-600">
                                        <span className="font-semibold">рЃЌрЃћрЃЏрЃљ:</span> {theme} | 
                                        <span className="font-semibold ml-2">рЃАрЃбрЃўрЃџрЃў:</span> {style} | 
                                        <span className="font-semibold ml-2">рЃњрЃљрЃюрЃгрЃДрЃЮрЃЉрЃљ:</span> {mood} |
                                        <span className="font-semibold ml-2">рЃЏрЃћрЃбрЃљрЃцрЃЮрЃарЃћрЃЉрЃў:</span> {useMetaphors ? (customMetaphors ? 'рЃАрЃърЃћрЃфрЃўрЃцрЃўрЃЎрЃБрЃарЃў' : 'рЃЌрЃљрЃЋрЃўрЃАрЃБрЃцрЃљрЃџрЃў') : 'рЃљрЃарЃљ'}
                                        {useMetaphors && customMetaphors && (
                                            <div className="mt-2 text-xs">
                                                <span className="font-semibold">рЃњрЃљрЃЏрЃЮрЃДрЃћрЃюрЃћрЃЉрЃБрЃџрЃў рЃЏрЃћрЃбрЃљрЃцрЃЮрЃарЃћрЃЉрЃў:</span> {customMetaphors}
                                            </div>
                                        )}
                                    </div>
                                </div>
                            )}
                        </div>

                        {/* Saved Poems */}
                        {saved.length > 0 && (
                            <div className="bg-white rounded-2xl shadow-xl p-8">
                                <h2 className="text-2xl font-bold text-gray-800 mb-6">рЃерЃћрЃюрЃљрЃ«рЃБрЃџрЃў рЃџрЃћрЃЦрЃАрЃћрЃЉрЃў ({saved.length})</h2>
                                <div className="space-y-4">
                                    {saved.slice().reverse().map((item) => (
                                        <div key={item.id} className="p-5 bg-gray-50 rounded-lg border border-gray-200">
                                            <div className="flex justify-between items-start mb-3">
                                                <div>
                                                    <h4 className="font-bold text-gray-800">{item.theme}</h4>
                                                    <p className="text-sm text-gray-600">{item.date}</p>
                                                </div>
                                                <button
                                                    onClick={() => deleteSaved(item.id)}
                                                    className="text-red-500 hover:text-red-700 text-sm font-medium"
                                                >
                                                    рЃгрЃљрЃерЃџрЃљ
                                                </button>
                                            </div>
                                            <div className="text-gray-700 leading-relaxed whitespace-pre-wrap font-serif mb-2">
                                                {item.text}
                                            </div>
                                            <div className="text-xs text-gray-500">
                                                {item.style} Рђб {item.mood} Рђб {item.metaphors ? (item.customMetaphors ? 'рЃАрЃърЃћрЃфрЃўрЃцрЃўрЃЎрЃБрЃарЃў рЃЏрЃћрЃбрЃљрЃцрЃЮрЃарЃћрЃЉрЃў' : 'рЃЌрЃљрЃЋрЃўрЃАрЃБрЃцрЃљрЃџрЃў рЃЏрЃћрЃбрЃљрЃцрЃЮрЃарЃћрЃЉрЃў') : 'рЃБрЃЉрЃарЃљрЃџрЃЮ рЃћрЃюрЃўрЃЌ'}
                                                {item.customMetaphors && (
                                                    <div className="mt-1 text-gray-400">
                                                        рЃЏрЃћрЃбрЃљрЃцрЃЮрЃарЃћрЃЉрЃў: {item.customMetaphors}
                                                    </div>
                                                )}
                                            </div>
                                        </div>
                                    ))}
                                </div>
                            </div>
                        )}
                    </div>
                </div>
            );
        }

        // Render the app
        ReactDOM.render(<PoetryGenerator />, document.getElementById('root'));
    </script>
</body>
</html>
